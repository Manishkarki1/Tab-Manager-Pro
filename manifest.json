{
  "manifest_version": 3,
  "name": "Tab Manager Pro",
  "version": "1.0",
  "description": "Advanced tab management with grouping, suspension, and sync features",
  "permissions": ["tabs", "storage", "idle", "unlimitedStorage"],
  "host_permissions": ["*://*/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.jpeg",
      "48": "icons/icon.jpeg",
      "128": "icons/icon.jpeg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.jpeg",
    "48": "icons/icon.jpeg",
    "128": "icons/icon.jpeg"
  }
}
